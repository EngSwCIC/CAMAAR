<%= form_with url: "/avaliacoes/response/#{@form_request.id}", method: :post, class: "flex w-full h-full" do |f| %>
  <div class="flex w-full h-full justify-center items-center">
    <div class="flex flex-col w-[600px] max-h-[600px] overflow-y-auto gap-8 bg-white p-8 rounded-lg">
      <span class="text-2xl text-slate-600 font-bold"><%= "#{@form_request.study_class.name}, #{@form_request.study_class.semester}" %></span>
      <div class="flex flex-col gap-4">
        <% @form_request.template.template_questions.each_with_index do |question, idx| %>
          <%= render :partial => "response/question", :locals => {
            form: f,
            question: {
              :index => idx,
              :title => question.title,
              :type => question.question_type,
              :content => question.content
            }
          } %>
        <% end %>
      </div>
      <%= f.submit "Enviar", class: "btn bg-green-400 hover:cursor-pointer text-2xl text-white p-4 w-full rounded-lg" %>
    </div>
  </div>
<% end %>
