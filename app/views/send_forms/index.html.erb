<%= form_with url: "todo", method: :post, class: "flex w-full h-full" do |f| %>
  <div class="flex w-full h-full justify-center items-center">
    <div class="flex flex-col w-[600px] max-h-[600px] overflow-y-auto gap-8 bg-white p-8 rounded-lg">
      <div class="flex flex-row w-full justify-end items-center gap-2 p-4">
        <span>Template: </span>
        <%= f.select "templates", @templates.map { |t| t.name } %>
      </div>

      <table class="table-auto text-left">
        <thead>
        <tr>
          <th></th>
          <th>Nome</th>
          <th>Semestre</th>
          <th>CÃ³digo</th>
        </tr>
        </thead>
        <tbody>
        <% @study_classes.each_with_index do |sc| %>
          <tr>
            <td><%= f.check_box("subject_#{sc.code}") %></td>
            <td><%= sc.name %></td>
            <td><%= sc.semester %></td>
            <td><%= sc.code %></td>
          </tr>
        <% end %>
        </tbody>
      </table>

      <%= f.submit "Enviar", class: "btn bg-green-400 hover:cursor-pointer text-2xl text-white p-4 w-full rounded-lg" %>
    </div>
  </div>
<% end %>
