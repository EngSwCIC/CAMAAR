<%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
<div class="main-content">
  <div class="section__content section__content--p30">
    <div class="container-fluid">
      <div class="formbold-form-wrapper">
        

        <h1 class="h1-aligned"><%= @form.name %></h1>
      
        <% @form_summary.each_with_index do |(title, answers), index| %>
  <h2 class="formbold-form-question-title"><%= index + 1 %> - <%= title %></h2>
  
  <% if answers.length > 1 %>
    <%= pie_chart answers %>

    <% answers.each do |option, number| %>
      <p><%= "#{option} - #{number}"%></p>
    <% end %>
  <% else %>
    <% answers.each do |answ| %>
      <p class="formbold-form-question-answer"><%= answ %></p>
    <% end %>
  <% end %>
<% end %>
        <h2>NÃºmero de respostas: <%= "#{@answered_number}/#{@total_number}"%></h2>

      </div>
    </div>
  </div>
</div>

