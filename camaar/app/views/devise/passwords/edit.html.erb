<%= stylesheet_link_tag "login" %>
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500&display=swap">

<body>
  <div class="container">
    <div class="white-section">
      <h1>ALTERAÇÃO DE SENHA</h1>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="input-container">
          <%= f.label :password, "Senha" %>
          <%= f.password_field :password, class: "input-field", placeholder: "Password" %>
        </div>
        <div class="input-container">
          <%= f.label :password_confirmation, "Confirme a Senha" %>
          <%= f.email_field :password_confirmation, class: "input-field", placeholder: "Password" %>
        </div>
        <div class="actions">
          <%= f.submit "Alterar Senha", class: "button" %>
        </div>
      <% end %>
    </div>
    <div class="purple-section">
      <p>Bem vindo ao Camaar</p>
    </div>
  </div>
</body>