<%= stylesheet_link_tag "login" %>
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500&display=swap">

<body>
  <div class="container">
    <div class="white-section">
      <h1>LOGIN</h1>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        
        <div class="input-container">
          <p><%= f.label :email %></p>
          <p><%= f.email_field :email, class: "input-field", placeholder: "email@aluno.unb.br" %></p>
        </div>

        <div class="input-container">
          <p><%= f.label :password, "Senha" %></p>
          <p><%= f.password_field :password, class: "input-field", placeholder: "Password" %></p>
        </div>

        <div class="actions">
          <p><%= f.submit "Entrar", class: "button" %></P>
        </div>
      <% end %>
    </div>
    <div class="purple-section">
      <p>Bem vindo ao Camaar</p>
    </div>
  </div>
</body>