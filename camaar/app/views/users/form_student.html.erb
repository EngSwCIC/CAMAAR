<div class="main-content">
  <div class="section__content section__content--p30">
    <div class="container-fluid">
      <div class="formbold-form-wrapper">
        <h1><%= @form.name %> </h1>

        <%= form_with(url: student_answers_path, method: "post") do |form| %>
          <% @form_questions.each do |form_question| %>
            <% if form_question.question_type == "multiple_choice" %>
              <div class="formbold-mb-5">
                <label for="<%= form_question.id %>" class="formbold-form-label">
                  <%= form_question.title %>
                </label>
  
                <div class="formbold-radio-flex">
                  <% form_question.options.each do |option, value| %>
                    <div class="formbold-radio-group">
                      <label class="formbold-radio-label">
                        <%= form.radio_button :answers, option, id: "#{form_question.id}_#{option}" %>
                        <%= value %>
                        <span class="formbold-radio-checkmark"></span>
                      </label>
                    </div>
                  <% end %>
                </div>
              </div>
            <% elsif form_question.question_type == "text" %>
              <div class="formbold-input-flex">
                <div>
                  <label for="reclamation" class="formbold-form-label">
                    <%= form_question.title %>
                  </label>
                  <input
                    type="text"
                    name="reclamation"
                    id="reclamation"
                    placeholder="Digite..."
                    class="formbold-form-input"
                  />
                </div>
              </div>
            <% end %>
          <% end %>
          
          <div class="row">
            <div class="col">
              <%= form.submit "Enviar", class: "btn btn-primary btn-block", style: "height: 38px;" %>
            </div>
            <div class="col">
              <%= link_to "Cancelar", users_page_path, class: "btn btn-danger btn-block", style: "height: 38px;" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
