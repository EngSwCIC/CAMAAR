<div class="main-content">
  <div class="section__content section__content--p30">
    <div class="container-fluid">
      <div class="formbold-form-wrapper">
        <div class="template-links">
          <% @templates.each do |template| %>
            <% if template.draft %>
              <%= link_to template.name, edit_template_path(template), class:"btn btn-success btn-sm template-link" %>
            <% else %>
              <%= link_to template.name, edit_template_path(template), class:"btn btn-success btn-sm template-link" %>
            <% end %>
          <% end %>
        </div>
        <div class="button-wrapper">
          <%= button_to "Adicionar Template", "templates/new", method: :get, id: "add_template", class: "au-btn au-btn-icon au-btn--blue" %>
        </div>
      </div>
    </div>
  </div>
</div>
