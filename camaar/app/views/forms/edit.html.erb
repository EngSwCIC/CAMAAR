<div class="main-content">
  <div class="section__content section__content--p30">
    <div class="container-fluid">
      <div class="formbold-form-wrapper">
        <h1><%= @form.name %></h1>
        <%= form_with(url: student_answers_path, method: "post") do |form| %>
          <% @form_questions.each do |form_question| %>
            <%= render partial: 'question', locals: { form_question: form_question, form:form } %>
          <% end %>
          <div class="row">
            <div class="col">
              <%= form.submit "Enviar", class: "btn btn-primary btn-block", style: "height: 38px;" %>
            </div>
            <div class="col">
              <%= link_to "Cancelar", forms_path, class: "btn btn-danger btn-block", style: "height: 38px;" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
