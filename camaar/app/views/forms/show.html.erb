<div class="main-content">
  <div class="section__content section__content--p30">
    <div class="container-fluid">
      <div class="formbold-form-wrapper">
        <h1><%= @form.name %></h1>
        <% @questions_and_answers.each_with_index do |(form_question,answer), question_number| %>
          <%= render partial: 'answer', locals: { form_question: form_question, answer: answer,question_number:question_number+1 } %>
        <% end %>
        <div class="row">
          <div class="col">
            <%= link_to "Voltar", forms_path(filter: :answered), class: "btn btn-danger btn-block", style: "height: 38px;" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
